---
const { variant= "primary"} = Astro.props; 

const buttonStyling = "bg-hvid-950 text-rod-500 font-prompt px-5 -skew-x-[15deg]";

const variantClasses = {
    "primary": "",
    "secondary": ""

};
---

    <button class:list={[buttonStyling, variantClasses[variant],]}>
        <div class="skew-x-[15deg]">
        <slot />
    </div>
    </button>


