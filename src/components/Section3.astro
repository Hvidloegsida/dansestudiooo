---
import Button from "./Button.astro";
---

<section class="backgg pt-10 md:pt-20 relative">
  <div class="p-4 md:flex justify-center items-center">
    <div class="absolute w-full mt-8 sm:mt-[10%]">
      <h3
        class="font-prompt font-bold text-[18px] sm:text-[30px] text-center text-gron-500 left-[10px] md:text-[52px] md:pb-[20px]"
      >
        25 top kompetente undervisere!
      </h3>
      <p class="text-center text-[11px] md:text-[15px]">
        Vi har samlet et unikt underviserteam
      </p>
      <div class="flex justify-center items-center mt-4 md:mt-8">
        <Button variant="secondarytxt">Se mere</Button>
      </div>

      <!-- Det er denne knap der skal ind på cards -->
    </div>
    <img src="/box.svg" class=" flex justify-center items-center w-[100%] md:w-[80%]" alt="box" />
  </div>

  <div class="mt-[7%]">
    <h3
      class="font-prompt font-bold text-[18px] text-center text-rod-500 my-[7%] md:text-[52px]"
    >
      Tjek ud vores danse portrætter!
    </h3>

    <div class="flex gap-9 w-[25%] pb-20 ml-5 md:ml-[10%]">
      <img src="/dans1.png" alt="danse portrætter" class="flippy1" />
      <img src="/dans2.png" alt="danse portrætter" class="flippy2" />
      <img src="/dans3.png" alt="danse portrætter" class="flippy3" />
    </div>
  </div>
</section>

<style>
  .backgg {
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 1) 7%,
      rgba(46, 43, 43, 1) 29%,
      rgba(85, 77, 77, 1) 40%,
      rgba(141, 132, 132, 1) 54%,
      rgba(197, 184, 184, 1) 66%,
      rgba(242, 223, 223, 1) 78%,
      rgba(255, 238, 238, 1) 94%
    );
  }

  .flippyanimation {
    -webkit-animation: flip-in-ver-right 0.9s
      cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.7s both;
    animation: flip-in-ver-right 0.9s cubic-bezier(0.25, 0.46, 0.45, 0.94) 0.7s
      both;
  }

  /* ----------------------------------------------
 * Generated by Animista on 2024-5-2 12:4:24
 * Licensed under FreeBSD License.
 * See http://animista.net/license for more info. 
 * w: http://animista.net, t: @cssanimista
 * ---------------------------------------------- */

  /**
 * ----------------------------------------
 * animation flip-in-ver-right
 * ----------------------------------------
 */
  @-webkit-keyframes flip-in-ver-right {
    0% {
      -webkit-transform: rotateY(-80deg);
      transform: rotateY(-80deg);
      opacity: 0;
    }
    100% {
      -webkit-transform: rotateY(0);
      transform: rotateY(0);
      opacity: 1;
    }
  }
  @keyframes flip-in-ver-right {
    0% {
      -webkit-transform: rotateY(-80deg);
      transform: rotateY(-80deg);
      opacity: 0;
    }
    100% {
      -webkit-transform: rotateY(0);
      transform: rotateY(0);
      opacity: 1;
    }
  }
</style>

<script>
  import { inView } from "motion";

  const flippy = document.querySelector(".flippy1");

  inView(
    flippy,
    () => {
      flippy.classList.add("flippyanimation");
    },
    { margin: "1000px 0px 0px 0px" }
  );
  const flippy2 = document.querySelector(".flippy2");

  inView(
    flippy2,
    () => {
      flippy2.classList.add("flippyanimation");
    },
    { margin: "1000px 0px 0px 0px" }
  );

  const flippy3 = document.querySelector(".flippy3");

  inView(
    flippy3,
    () => {
      flippy3.classList.add("flippyanimation");
    },
    { margin: "1000px 0px 0px 0px" }
  );
</script>
